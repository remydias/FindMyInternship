<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ViewOfferContent"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <TextView
            android:id="@+id/offertitle_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/compname_view_offer"
            android:layout_below="@+id/compname_view_offer"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/offerdesc_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/offertitle_view_offer"
            android:layout_below="@+id/offertitle_view_offer"
            android:layout_marginTop="25dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/skills_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/offerdesc_view_offer"
            android:layout_below="@+id/offerdesc_view_offer"
            android:layout_marginTop="28dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/profile_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/skills_view_offer"
            android:layout_below="@+id/skills_view_offer"
            android:layout_marginTop="25dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/duration_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/profile_view_offer"
            android:layout_below="@+id/profile_view_offer"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/salary_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/duration_view_offer"
            android:layout_below="@+id/duration_view_offer"
            android:layout_marginTop="26dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/compname_view_offer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="24dp"
            android:text="TextView"
            android:textSize="18sp" />

        <ImageButton
            android:id="@+id/backButton"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/salary_view_offer"
            android:layout_marginRight="25dp"
            android:src="@drawable/backbutton" />

            <CheckBox
                android:id="@+id/checkstar"
                style="?android:attr/starStyle"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true" />

            <ImageButton
                android:id="@+id/imageButtonApplication"
                android:layout_width="90dp"
                android:layout_height="30dp"
                android:layout_alignLeft="@+id/salary_view_offer"
                android:layout_alignTop="@+id/backButton"
                android:layout_marginTop="17dp"
                android:src="@drawable/applybutton" />

    </RelativeLayout>

</LinearLayout>

</ScrollView>
