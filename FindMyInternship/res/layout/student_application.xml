<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.20" >

        <TextView
            android:id="@+id/TV_Apply_Title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/TV_Apply_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV_Apply_Title"
            android:layout_below="@+id/TV_Apply_Title"
            android:layout_marginTop="26dp"
            android:text="TextView"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/TV_Apply_desc"
            android:layout_below="@+id/TV_Apply_desc"
            android:layout_marginTop="24dp"
            android:text="Pourquoi ce poste ?"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextCoverLetter"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/textView1"
            android:layout_below="@+id/textView1"
            android:layout_marginTop="23dp"
            android:ems="10"
            android:inputType="textMultiLine" >

            <requestFocus />
        </EditText>

        <ImageButton
            android:id="@+id/imageButtonValApply"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editTextCoverLetter"
            android:layout_centerVertical="true"
            android:src="@drawable/applybutton" />

    </RelativeLayout>

</LinearLayout>